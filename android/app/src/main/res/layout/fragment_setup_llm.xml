<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setup_llm_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/text_llm_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setup_llm_desc"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="24dp"/>

        <!-- CIRIS Proxy Option (for Google OAuth users) -->
        <LinearLayout
            android:id="@+id/card_ciris_proxy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_success"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ“"
                    android:textSize="24sp"
                    android:textColor="@color/success_dark"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setup_free_ai_ready"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/success_dark"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setup_free_ai_desc"
                android:textSize="14sp"
                android:textColor="@color/success_text"/>
        </LinearLayout>

        <!-- Advanced Option Link (for Google users to switch to BYOK) -->
        <TextView
            android:id="@+id/text_advanced_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setup_byok_advanced"
            android:textSize="14sp"
            android:textColor="@color/gray_dark"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:visibility="gone"/>

        <!-- BYOK Section Header (shown when in BYOK mode) -->
        <LinearLayout
            android:id="@+id/card_byok_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card_info"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setup_byok_mode_title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/info_dark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setup_byok_mode_desc"
                    android:textSize="12sp"
                    android:textColor="@color/info_text"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_use_free_ai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setup_use_free_ai"
                android:textSize="12sp"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>
        </LinearLayout>

        <!-- Provider Selection (BYOK mode) -->
        <LinearLayout
            android:id="@+id/section_byok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setup_provider_label"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinner_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setup_api_key_label"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/edit_api_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/setup_api_key_hint"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"/>

            <!-- Model Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setup_model_label"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinner_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Test Connection Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btn_test_connection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setup_test_connection"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:textColor="@color/ciris_primary"/>

                <TextView
                    android:id="@+id/text_connection_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textSize="14sp"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
