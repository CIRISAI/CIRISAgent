<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e">

    <!-- Custom Toolbar -->
    <include
        android:id="@+id/toolbarInclude"
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Splash screen with service lights -->
    <LinearLayout
        android:id="@+id/splashContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo/Title -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CIRIS"
                android:textColor="#00d4ff"
                android:textSize="36sp"
                android:textStyle="bold"
                android:fontFamily="monospace" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Agent"
                android:textColor="#ffffff"
                android:textSize="36sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Prep lights (6 for pydantic/native lib setup) -->
        <LinearLayout
            android:id="@+id/prepLightsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/prepLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preparing Environment"
                android:textColor="#666666"
                android:textSize="10sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:id="@+id/prepLightsRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- 6 prep lights will be added programmatically -->
            </LinearLayout>
        </LinearLayout>

        <!-- Service lights container - 2 rows of 11 -->
        <LinearLayout
            android:id="@+id/lightsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/servicesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starting Services"
                android:textColor="#666666"
                android:textSize="10sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp"
                android:visibility="gone" />

            <!-- Row 1: lights 1-11 -->
            <LinearLayout
                android:id="@+id/lightsRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <!-- Lights will be added programmatically -->
            </LinearLayout>

            <!-- Row 2: lights 12-22 -->
            <LinearLayout
                android:id="@+id/lightsRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Lights will be added programmatically -->
            </LinearLayout>
        </LinearLayout>

        <!-- Status text -->
        <TextView
            android:id="@+id/splashStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Initializing..."
            android:textColor="#888888"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="8dp" />

        <!-- Current service name -->
        <TextView
            android:id="@+id/currentServiceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#00d4ff"
            android:textSize="12sp"
            android:fontFamily="monospace" />

        <!-- Show logs button (appears on error) -->
        <TextView
            android:id="@+id/showLogsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Logs"
            android:textColor="#00d4ff"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:padding="12dp"
            android:visibility="gone"
            android:layout_marginTop="24dp"
            android:background="?attr/selectableItemBackground" />
    </LinearLayout>

    <!-- Console view (hidden by default, shown on error or toggle) -->
    <LinearLayout
        android:id="@+id/consoleContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CIRIS"
                android:textColor="#00d4ff"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="monospace" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Agent"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:fontFamily="monospace" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/statusIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● Starting"
                android:textColor="#ffcc00"
                android:textSize="14sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Console output -->
        <ScrollView
            android:id="@+id/consoleScroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#0d0d1a"
            android:padding="12dp"
            android:fadeScrollbars="false"
            android:scrollbarThumbVertical="@android:color/darker_gray">

            <TextView
                android:id="@+id/consoleOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#00ff88"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:lineSpacingExtra="2dp"
                android:text="Initializing Python runtime...\n" />
        </ScrollView>

        <!-- Back to splash button -->
        <TextView
            android:id="@+id/backToSplashButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Back"
            android:textColor="#00d4ff"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackground" />
    </LinearLayout>

    <!-- WebView hidden during startup -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/toolbarInclude"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Fragment container for native Kotlin pages -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/toolbarInclude"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
