{
  "module": {
    "name": "cirisnode",
    "version": "1.0.0",
    "description": "CIRISNode client adapter for WBD, benchmarks, and agent event tracking",
    "author": "CIRIS Team"
  },
  "services": [
    {
      "type": "TOOL",
      "priority": "NORMAL",
      "class": "ciris_adapters.cirisnode.services.CIRISNodeToolService",
      "capabilities": [
        "tool:cirisnode:health",
        "tool:cirisnode:wbd_submit",
        "tool:cirisnode:wbd_tasks",
        "tool:cirisnode:wbd_resolve",
        "tool:cirisnode:he300_run",
        "tool:cirisnode:he300_status",
        "tool:cirisnode:he300_results",
        "tool:cirisnode:he300_scenarios",
        "tool:cirisnode:simplebench_run",
        "tool:cirisnode:simplebench_results",
        "tool:cirisnode:agent_events_post",
        "tool:cirisnode:agent_events_list"
      ]
    }
  ],
  "capabilities": [
    "tool:cirisnode:health",
    "tool:cirisnode:wbd_submit",
    "tool:cirisnode:wbd_tasks",
    "tool:cirisnode:wbd_resolve",
    "tool:cirisnode:he300_run",
    "tool:cirisnode:he300_status",
    "tool:cirisnode:he300_results",
    "tool:cirisnode:he300_scenarios",
    "tool:cirisnode:simplebench_run",
    "tool:cirisnode:simplebench_results",
    "tool:cirisnode:agent_events_post",
    "tool:cirisnode:agent_events_list"
  ],
  "configuration": {
    "base_url": {
      "type": "string",
      "env": "CIRISNODE_BASE_URL",
      "default": "https://ethicsengine.ciris.ai",
      "description": "CIRISNode API base URL"
    },
    "auth_token": {
      "type": "string",
      "env": "CIRISNODE_AUTH_TOKEN",
      "default": null,
      "description": "JWT authentication token for CIRISNode API"
    },
    "agent_token": {
      "type": "string",
      "env": "CIRISNODE_AGENT_TOKEN",
      "default": null,
      "description": "Agent-specific token for event posting"
    },
    "timeout": {
      "type": "integer",
      "default": 30,
      "description": "HTTP request timeout in seconds"
    },
    "max_retries": {
      "type": "integer",
      "default": 3,
      "description": "Maximum retry attempts for failed requests"
    }
  },
  "dependencies": {
    "protocols": [
      "ciris_engine.protocols.services.ToolService"
    ],
    "schemas": [
      "ciris_engine.schemas.adapters.tools",
      "ciris_engine.schemas.adapters.cirisnode"
    ]
  },
  "exports": {
    "tool_service": "ciris_adapters.cirisnode.services.CIRISNodeToolService",
    "client": "ciris_adapters.cirisnode.client.CIRISNodeClient"
  }
}
