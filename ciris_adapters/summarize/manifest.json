{
  "module": {
    "name": "summarize",
    "version": "1.0.0",
    "description": "Summarize or extract text/transcripts from URLs, podcasts, and local files (great fallback for \u201ctranscribe this YouTube/video\u201d).",
    "author": "CIRIS Team (converted from Clawdbot)",
    "homepage": "https://summarize.sh"
  },
  "platform_requirements": [
    "desktop_cli"
  ],
  "platform_requirements_rationale": "Requires CLI tools only available on desktop",
  "services": [
    {
      "type": "TOOL",
      "priority": "NORMAL",
      "class": "summarize.service.SummarizeToolService",
      "capabilities": [
        "tool:summarize",
        "requires:binaries"
      ]
    }
  ],
  "capabilities": [
    "tool:summarize",
    "requires:binaries"
  ],
  "dependencies": {
    "protocols": [
      "ciris_engine.protocols.services.runtime.tool.ToolServiceProtocol"
    ],
    "schemas": [
      "ciris_engine.schemas.adapters.tools"
    ]
  },
  "exports": {
    "service_class": "summarize.service.SummarizeToolService"
  },
  "configuration": {}
}
