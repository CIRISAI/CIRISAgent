    "version": "1.0.0",
    "description": "Create, search, and manage Bear notes via grizzly CLI.",
    "author": "CIRIS Team (converted from Clawdbot)",
    "homepage": "https://bear.app"
  },
  "platform_requirements": [
    "desktop_cli"
  ],
  "platform_requirements_rationale": "Requires CLI tools only available on desktop",
  "services": [
    {
      "type": "TOOL",
      "priority": "NORMAL",
      "class": "bear_notes.service.BearNotesToolService",
      "capabilities": [
        "tool:bear_notes",
        "requires:binaries"
      ]
    }
  ],
  "capabilities": [
    "tool:bear_notes",
    "requires:binaries"
  ],
  "dependencies": {
    "protocols": [
      "ciris_engine.protocols.services.runtime.tool.ToolServiceProtocol"
    ],
    "schemas": [
      "ciris_engine.schemas.adapters.tools"
    ]
  },
  "exports": {
    "service_class": "bear_notes.service.BearNotesToolService"
  },
  "configuration": {}
}
