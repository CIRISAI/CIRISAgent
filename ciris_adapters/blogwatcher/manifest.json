{
  "module": {
    "name": "blogwatcher",
    "version": "1.0.0",
    "description": "Monitor blogs and RSS/Atom feeds for updates using the blogwatcher CLI.",
    "author": "CIRIS Team (converted from Clawdbot)",
    "homepage": "https://github.com/Hyaxia/blogwatcher"
  },
  "platform_requirements": [
    "desktop_cli"
  ],
  "platform_requirements_rationale": "Requires CLI tools only available on desktop",
  "services": [
    {
      "type": "TOOL",
      "priority": "NORMAL",
      "class": "blogwatcher.service.BlogwatcherToolService",
      "capabilities": [
        "tool:blogwatcher",
        "requires:binaries"
      ]
    }
  ],
  "capabilities": [
    "tool:blogwatcher",
    "requires:binaries"
  ],
  "dependencies": {
    "protocols": [
      "ciris_engine.protocols.services.runtime.tool.ToolServiceProtocol"
    ],
    "schemas": [
      "ciris_engine.schemas.adapters.tools"
    ]
  },
  "exports": {
    "service_class": "blogwatcher.service.BlogwatcherToolService"
  },
  "configuration": {}
}
