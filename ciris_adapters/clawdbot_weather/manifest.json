{
  "module": {
    "name": "clawdbot_weather",
    "version": "1.0.0",
    "description": "Get current weather and forecasts (no API key required).",
    "author": "CIRIS Team (converted from Clawdbot)",
    "homepage": "https://wttr.in/:help"
  },
  "platform_requirements": [
    "desktop_cli"
  ],
  "platform_requirements_rationale": "Requires CLI tools only available on desktop",
  "services": [
    {
      "type": "TOOL",
      "priority": "NORMAL",
      "class": "clawdbot_weather.service.WeatherToolService",
      "capabilities": [
        "tool:weather",
        "requires:binaries"
      ]
    }
  ],
  "capabilities": [
    "tool:weather",
    "requires:binaries"
  ],
  "dependencies": {
    "protocols": [
      "ciris_engine.protocols.services.runtime.tool.ToolServiceProtocol"
    ],
    "schemas": [
      "ciris_engine.schemas.adapters.tools"
    ]
  },
  "exports": {
    "service_class": "clawdbot_weather.service.WeatherToolService"
  },
  "configuration": {}
}
