<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Network permissions for remote LLM endpoint -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Google Play Billing permission -->
    <uses-permission android:name="com.android.vending.BILLING" />

    <!-- Storage for on-device database and logs -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />

    <!-- Required for Android 11+ to query browser Custom Tabs support -->
    <!-- Without this, CustomTabsClient.getPackageName() returns null -->
    <queries>
        <!-- Query browsers for Custom Tabs warmup -->
        <intent>
            <action android:name="android.support.customtabs.action.CustomTabsService" />
        </intent>
        <!-- Query browsers for VIEW intent (fallback) -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="https" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.CIRIS"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <!-- Login activity with Google Sign-In (LAUNCHER) -->
        <activity
            android:name=".auth.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.CIRIS.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main activity launches Python server and WebView UI -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="adjustResize" />

        <!-- Settings activity for LLM endpoint configuration -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="@string/settings_title"
            android:parentActivityName=".MainActivity" />

        <!-- Purchase activity for buying credits via Google Play -->
        <activity
            android:name=".PurchaseActivity"
            android:exported="false"
            android:label="@string/purchase_title"
            android:parentActivityName=".MainActivity" />

        <!-- Interact activity for chat with agent -->
        <activity
            android:name=".InteractActivity"
            android:exported="false"
            android:label="Chat with CIRIS"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.CIRIS.NoActionBar" />

        <!-- Runtime activity for viewing live reasoning stream -->
        <activity
            android:name=".RuntimeActivity"
            android:exported="false"
            android:label="Reasoning Stream"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.CIRIS.NoActionBar" />

        <!-- OAuth callback activity for deep link handling -->
        <!-- Handles ciris://oauth/callback?code=xxx&state=yyy from OAuth providers -->
        <!-- Reusable for any OAuth2 provider: Home Assistant, Discord, Google, Microsoft, Reddit, etc. -->
        <activity
            android:name=".OAuthCallbackActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.CIRIS.Transparent">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Primary OAuth callback scheme -->
                <data android:scheme="ciris" android:host="oauth" android:pathPrefix="/callback" />
            </intent-filter>
            <!-- Additional intent filter for per-provider paths if needed -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Provider-specific callbacks: ciris://oauth/ha, ciris://oauth/discord, etc. -->
                <data android:scheme="ciris" android:host="oauth" />
            </intent-filter>
        </activity>
    </application>
</manifest>
