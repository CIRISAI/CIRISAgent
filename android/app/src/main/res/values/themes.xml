<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Main CIRIS theme with custom toolbar (no default action bar) -->
    <style name="Theme.CIRIS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ciris_primary</item>
        <item name="colorPrimaryVariant">@color/ciris_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/ciris_accent</item>
        <item name="colorSecondaryVariant">@color/ciris_secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/ciris_secondary</item>
    </style>

    <!-- No action bar theme for login screen -->
    <style name="Theme.CIRIS.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ciris_primary</item>
        <item name="colorPrimaryVariant">@color/ciris_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/ciris_accent</item>
        <item name="colorSecondaryVariant">@color/ciris_secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/ciris_primary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Transparent theme for OAuth callback activity -->
    <!-- Activity processes deep link and finishes immediately, no visible UI needed -->
    <style name="Theme.CIRIS.Transparent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
