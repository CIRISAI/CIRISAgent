{
  "module": {
    "name": "clawdbot_local_places",
    "version": "1.0.0",
    "description": "Search for places (restaurants, cafes, etc.) via Google Places API proxy on localhost.",
    "author": "CIRIS Team (converted from Clawdbot)",
    "homepage": "https://github.com/Hyaxia/local_places"
  },
  "services": [
    {
      "type": "TOOL",
      "priority": "NORMAL",
      "class": "clawdbot_local_places.service.LocalPlacesToolService",
      "capabilities": [
        "tool:local_places",
        "requires:binaries",
        "requires:env"
      ]
    }
  ],
  "capabilities": [
    "tool:local_places",
    "requires:binaries",
    "requires:env"
  ],
  "dependencies": {
    "protocols": [
      "ciris_engine.protocols.services.runtime.tool.ToolServiceProtocol"
    ],
    "schemas": [
      "ciris_engine.schemas.adapters.tools"
    ]
  },
  "exports": {
    "service_class": "clawdbot_local_places.service.LocalPlacesToolService"
  },
  "configuration": {
    "google_places_api_key": {
      "type": "string",
      "env": "GOOGLE_PLACES_API_KEY",
      "description": "Environment variable GOOGLE_PLACES_API_KEY",
      "sensitivity": "HIGH"
    }
  },
  "interactive_config": {
    "required": true,
    "workflow_type": "simple_config",
    "steps": [
      {
        "step_id": "env_0",
        "step_type": "input",
        "title": "Configure GOOGLE_PLACES_API_KEY",
        "description": "Enter the value for GOOGLE_PLACES_API_KEY",
        "fields": [
          {
            "name": "google_places_api_key",
            "type": "string",
            "label": "GOOGLE_PLACES_API_KEY",
            "required": true,
            "sensitive": true
          }
        ]
      },
      {
        "step_id": "confirm",
        "step_type": "confirm",
        "title": "Confirm Configuration",
        "description": "Review and confirm your configuration"
      }
    ],
    "completion_method": "apply_config"
  }
}
