{
  "module": {
    "name": "clawdbot_openai_whisper_api",
    "version": "1.0.0",
    "description": "Transcribe audio via OpenAI Audio Transcriptions API (Whisper).",
    "author": "CIRIS Team (converted from Clawdbot)",
    "homepage": "https://platform.openai.com/docs/guides/speech-to-text"
  },
  "services": [
    {
      "type": "TOOL",
      "priority": "NORMAL",
      "class": "clawdbot_openai_whisper_api.service.OpenaiWhisperApiToolService",
      "capabilities": [
        "tool:openai_whisper_api",
        "requires:binaries",
        "requires:env"
      ]
    }
  ],
  "capabilities": [
    "tool:openai_whisper_api",
    "requires:binaries",
    "requires:env"
  ],
  "dependencies": {
    "protocols": [
      "ciris_engine.protocols.services.runtime.tool.ToolServiceProtocol"
    ],
    "schemas": [
      "ciris_engine.schemas.adapters.tools"
    ]
  },
  "exports": {
    "service_class": "clawdbot_openai_whisper_api.service.OpenaiWhisperApiToolService"
  },
  "configuration": {
    "openai_api_key": {
      "type": "string",
      "env": "OPENAI_API_KEY",
      "description": "Environment variable OPENAI_API_KEY",
      "sensitivity": "HIGH"
    }
  },
  "interactive_config": {
    "required": true,
    "workflow_type": "simple_config",
    "steps": [
      {
        "step_id": "env_0",
        "step_type": "input",
        "title": "Configure OPENAI_API_KEY",
        "description": "Enter the value for OPENAI_API_KEY",
        "fields": [
          {
            "name": "openai_api_key",
            "type": "string",
            "label": "OPENAI_API_KEY",
            "required": true,
            "sensitive": true
          }
        ]
      },
      {
        "step_id": "confirm",
        "step_type": "confirm",
        "title": "Confirm Configuration",
        "description": "Review and confirm your configuration"
      }
    ],
    "completion_method": "apply_config"
  }
}
