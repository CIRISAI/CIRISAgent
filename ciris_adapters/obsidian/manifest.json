{
  "module": {
    "name": "obsidian",
    "version": "1.0.0",
    "description": "Work with Obsidian vaults (plain Markdown notes) and automate via obsidian-cli.",
    "author": "CIRIS Team (converted from Clawdbot)",
    "homepage": "https://help.obsidian.md"
  },
  "platform_requirements": [
    "desktop_cli"
  ],
  "platform_requirements_rationale": "Requires CLI tools only available on desktop",
  "services": [
    {
      "type": "TOOL",
      "priority": "NORMAL",
      "class": "obsidian.service.ObsidianToolService",
      "capabilities": [
        "tool:obsidian",
        "requires:binaries"
      ]
    }
  ],
  "capabilities": [
    "tool:obsidian",
    "requires:binaries"
  ],
  "dependencies": {
    "protocols": [
      "ciris_engine.protocols.services.runtime.tool.ToolServiceProtocol"
    ],
    "schemas": [
      "ciris_engine.schemas.adapters.tools"
    ]
  },
  "exports": {
    "service_class": "obsidian.service.ObsidianToolService"
  },
  "configuration": {}
}
