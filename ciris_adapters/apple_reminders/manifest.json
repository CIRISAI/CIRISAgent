{
  "module": {
    "name": "apple_reminders",
    "version": "1.0.0",
    "description": "Manage Apple Reminders via the `remindctl` CLI on macOS (list, add, edit, complete, delete). Supports lists, date filters, and JSON/plain output.",
    "author": "CIRIS Team (converted from Clawdbot)",
    "homepage": "https://github.com/steipete/remindctl"
  },
  "platform_requirements": [
    "desktop_cli"
  ],
  "platform_requirements_rationale": "Requires CLI tools only available on desktop",
  "services": [
    {
      "type": "TOOL",
      "priority": "NORMAL",
      "class": "apple_reminders.service.AppleRemindersToolService",
      "capabilities": [
        "tool:apple_reminders",
        "requires:binaries"
      ]
    }
  ],
  "capabilities": [
    "tool:apple_reminders",
    "requires:binaries"
  ],
  "dependencies": {
    "protocols": [
      "ciris_engine.protocols.services.runtime.tool.ToolServiceProtocol"
    ],
    "schemas": [
      "ciris_engine.schemas.adapters.tools"
    ]
  },
  "exports": {
    "service_class": "apple_reminders.service.AppleRemindersToolService"
  },
  "configuration": {}
}
