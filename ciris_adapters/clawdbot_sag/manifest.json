{
  "module": {
    "name": "clawdbot_sag",
    "version": "1.0.0",
    "description": "ElevenLabs text-to-speech with mac-style say UX.",
    "author": "CIRIS Team (converted from Clawdbot)",
    "homepage": "https://sag.sh"
  },
  "services": [
    {
      "type": "TOOL",
      "priority": "NORMAL",
      "class": "clawdbot_sag.service.SagToolService",
      "capabilities": [
        "tool:sag",
        "requires:binaries",
        "requires:env"
      ]
    }
  ],
  "capabilities": [
    "tool:sag",
    "requires:binaries",
    "requires:env"
  ],
  "dependencies": {
    "protocols": [
      "ciris_engine.protocols.services.runtime.tool.ToolServiceProtocol"
    ],
    "schemas": [
      "ciris_engine.schemas.adapters.tools"
    ]
  },
  "exports": {
    "service_class": "clawdbot_sag.service.SagToolService"
  },
  "configuration": {
    "elevenlabs_api_key": {
      "type": "string",
      "env": "ELEVENLABS_API_KEY",
      "description": "Environment variable ELEVENLABS_API_KEY",
      "sensitivity": "HIGH"
    }
  },
  "interactive_config": {
    "required": true,
    "workflow_type": "simple_config",
    "steps": [
      {
        "step_id": "env_0",
        "step_type": "input",
        "title": "Configure ELEVENLABS_API_KEY",
        "description": "Enter the value for ELEVENLABS_API_KEY",
        "fields": [
          {
            "name": "elevenlabs_api_key",
            "type": "string",
            "label": "ELEVENLABS_API_KEY",
            "required": true,
            "sensitive": true
          }
        ]
      },
      {
        "step_id": "confirm",
        "step_type": "confirm",
        "title": "Confirm Configuration",
        "description": "Review and confirm your configuration"
      }
    ],
    "completion_method": "apply_config"
  }
}
