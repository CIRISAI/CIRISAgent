{
  "module": {
    "name": "clawdbot_notion",
    "version": "1.0.0",
    "description": "Notion API for creating and managing pages, databases, and blocks.",
    "author": "CIRIS Team (converted from Clawdbot)",
    "homepage": "https://developers.notion.com"
  },
  "services": [
    {
      "type": "TOOL",
      "priority": "NORMAL",
      "class": "clawdbot_notion.service.NotionToolService",
      "capabilities": [
        "tool:notion",
        "requires:env"
      ]
    }
  ],
  "capabilities": [
    "tool:notion",
    "requires:env"
  ],
  "dependencies": {
    "protocols": [
      "ciris_engine.protocols.services.runtime.tool.ToolServiceProtocol"
    ],
    "schemas": [
      "ciris_engine.schemas.adapters.tools"
    ]
  },
  "exports": {
    "service_class": "clawdbot_notion.service.NotionToolService"
  },
  "configuration": {
    "notion_api_key": {
      "type": "string",
      "env": "NOTION_API_KEY",
      "description": "Environment variable NOTION_API_KEY",
      "sensitivity": "HIGH"
    }
  },
  "interactive_config": {
    "required": true,
    "workflow_type": "simple_config",
    "steps": [
      {
        "step_id": "env_0",
        "step_type": "input",
        "title": "Configure NOTION_API_KEY",
        "description": "Enter the value for NOTION_API_KEY",
        "fields": [
          {
            "name": "notion_api_key",
            "type": "string",
            "label": "NOTION_API_KEY",
            "required": true,
            "sensitive": true
          }
        ]
      },
      {
        "step_id": "confirm",
        "step_type": "confirm",
        "title": "Confirm Configuration",
        "description": "Review and confirm your configuration"
      }
    ],
    "completion_method": "apply_config"
  }
}
