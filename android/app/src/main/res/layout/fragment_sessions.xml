<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sessionsRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cognitive Sessions"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1F2937" />

        <ImageButton
            android:id="@+id/refreshButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_rotate"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Refresh"
            android:tint="#6B7280" />

    </LinearLayout>

    <!-- Current State Banner -->
    <LinearLayout
        android:id="@+id/currentStateBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="#EFF6FF"
        android:gravity="center_vertical">

        <View
            android:id="@+id/currentStateDot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/status_dot_green" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Current State:"
            android:textSize="14sp"
            android:textColor="#6B7280" />

        <TextView
            android:id="@+id/currentStateText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="WORK"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1E40AF" />

    </LinearLayout>

    <!-- Loading indicator -->
    <ProgressBar
        android:id="@+id/loadingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="#F0FDF4"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About Cognitive Sessions"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#166534" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="CIRIS cognitive states control how the agent processes. DREAM uses credits for self-improvement. PLAY processes normally with creative variance. SOLITUDE uses zero credits - perfect for rest periods."
                        android:textSize="11sp"
                        android:textColor="#15803D"
                        android:lineSpacingMultiplier="1.2" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- DREAM Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="#FFFFFF"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:id="@+id/dreamStatusDot"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/status_dot_inactive" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="DREAM"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#7C3AED" />

                        <TextView
                            android:id="@+id/dreamBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AVAILABLE"
                            android:textSize="10sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/badge_purple"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Deep introspection and memory consolidation. Consolidates telemetry, analyzes patterns, and adapts behavior."
                        android:textSize="13sp"
                        android:textColor="#6B7280" />

                    <!-- Resource Usage -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Uses 12-24 credits • 30-120 min duration"
                        android:textSize="11sp"
                        android:textColor="#9CA3AF"
                        android:textStyle="italic" />

                    <!-- Capabilities -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Memory Consolidation"
                            android:textSize="10sp"
                            android:textColor="#7C3AED"
                            android:background="@drawable/chip_purple"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="Pattern Analysis"
                            android:textSize="10sp"
                            android:textColor="#7C3AED"
                            android:background="@drawable/chip_purple"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/initiateDreamButton"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="12dp"
                        android:text="Initiate Dream Session"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/button_filled_purple"
                        android:minWidth="0dp"
                        android:minHeight="0dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- PLAY Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="#FFFFFF"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:id="@+id/playStatusDot"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/status_dot_inactive" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="PLAY"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#F59E0B" />

                        <TextView
                            android:id="@+id/playBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AVAILABLE"
                            android:textSize="10sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/badge_yellow"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Creative exploration and experimentation. Processes tasks with 20% chance of novel approaches."
                        android:textSize="13sp"
                        android:textColor="#6B7280" />

                    <!-- Resource Usage -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Normal credit usage • Same as WORK • Until you exit"
                        android:textSize="11sp"
                        android:textColor="#9CA3AF"
                        android:textStyle="italic" />

                    <!-- Capabilities -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Creative Tasks"
                            android:textSize="10sp"
                            android:textColor="#D97706"
                            android:background="@drawable/chip_yellow"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="Learning"
                            android:textSize="10sp"
                            android:textColor="#D97706"
                            android:background="@drawable/chip_yellow"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="Exploration"
                            android:textSize="10sp"
                            android:textColor="#D97706"
                            android:background="@drawable/chip_yellow"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/initiatePlayButton"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="12dp"
                        android:text="Initiate Play Session"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/button_filled_yellow"
                        android:minWidth="0dp"
                        android:minHeight="0dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- SOLITUDE Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="#FFFFFF"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:id="@+id/solitudeStatusDot"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/status_dot_inactive" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="SOLITUDE"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#0EA5E9" />

                        <TextView
                            android:id="@+id/solitudeBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AVAILABLE"
                            android:textSize="10sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/badge_cyan"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Quiet reflection and rest. Only handles critical tasks (priority 8+). Good for boundary setting."
                        android:textSize="13sp"
                        android:textColor="#6B7280" />

                    <!-- Resource Usage -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Zero credits used • 5-30 min duration"
                        android:textSize="11sp"
                        android:textColor="#9CA3AF"
                        android:textStyle="italic" />

                    <!-- Capabilities -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rest Mode"
                            android:textSize="10sp"
                            android:textColor="#0284C7"
                            android:background="@drawable/chip_cyan"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="Maintenance"
                            android:textSize="10sp"
                            android:textColor="#0284C7"
                            android:background="@drawable/chip_cyan"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="Zero Credits"
                            android:textSize="10sp"
                            android:textColor="#0284C7"
                            android:background="@drawable/chip_cyan"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/initiateSolitudeButton"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="12dp"
                        android:text="Initiate Solitude Session"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/button_filled_cyan"
                        android:minWidth="0dp"
                        android:minHeight="0dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Return to Work button -->
            <Button
                android:id="@+id/returnToWorkButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:text="Return to WORK State"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:background="@drawable/button_outline_gray"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
