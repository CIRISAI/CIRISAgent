{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Debug /final_test_reddit.py",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/final_test_reddit.py",
                "--maxfail=1", // Stop after the first failure
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
