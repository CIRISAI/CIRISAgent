{
  "module": {
    "name": "eightctl",
    "version": "1.0.0",
    "description": "Control Eight Sleep pods (status, temperature, alarms, schedules).",
    "author": "CIRIS Team (converted from Clawdbot)",
    "homepage": "https://eightctl.sh"
  },
  "platform_requirements": [
    "desktop_cli"
  ],
  "platform_requirements_rationale": "Requires CLI tools only available on desktop",
  "services": [
    {
      "type": "TOOL",
      "priority": "NORMAL",
      "class": "eightctl.service.EightctlToolService",
      "capabilities": [
        "tool:eightctl",
        "requires:binaries"
      ]
    }
  ],
  "capabilities": [
    "tool:eightctl",
    "requires:binaries"
  ],
  "dependencies": {
    "protocols": [
      "ciris_engine.protocols.services.runtime.tool.ToolServiceProtocol"
    ],
    "schemas": [
      "ciris_engine.schemas.adapters.tools"
    ]
  },
  "exports": {
    "service_class": "eightctl.service.EightctlToolService"
  },
  "configuration": {}
}
