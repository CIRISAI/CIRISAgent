{
  "module": {
    "name": "clawdbot_sherpa_onnx_tts",
    "version": "1.0.0",
    "description": "Local text-to-speech via sherpa-onnx (offline, no cloud)",
    "author": "CIRIS Team (converted from Clawdbot)",
    "homepage": null
  },
  "services": [
    {
      "type": "TOOL",
      "priority": "NORMAL",
      "class": "clawdbot_sherpa_onnx_tts.service.SherpaOnnxTtsToolService",
      "capabilities": [
        "tool:sherpa_onnx_tts",
        "requires:env"
      ]
    }
  ],
  "capabilities": [
    "tool:sherpa_onnx_tts",
    "requires:env"
  ],
  "dependencies": {
    "protocols": [
      "ciris_engine.protocols.services.runtime.tool.ToolServiceProtocol"
    ],
    "schemas": [
      "ciris_engine.schemas.adapters.tools"
    ]
  },
  "exports": {
    "service_class": "clawdbot_sherpa_onnx_tts.service.SherpaOnnxTtsToolService"
  },
  "configuration": {
    "sherpa_onnx_runtime_dir": {
      "type": "string",
      "env": "SHERPA_ONNX_RUNTIME_DIR",
      "description": "Environment variable SHERPA_ONNX_RUNTIME_DIR"
    },
    "sherpa_onnx_model_dir": {
      "type": "string",
      "env": "SHERPA_ONNX_MODEL_DIR",
      "description": "Environment variable SHERPA_ONNX_MODEL_DIR"
    }
  },
  "interactive_config": {
    "required": true,
    "workflow_type": "simple_config",
    "steps": [
      {
        "step_id": "env_0",
        "step_type": "input",
        "title": "Configure SHERPA_ONNX_RUNTIME_DIR",
        "description": "Enter the value for SHERPA_ONNX_RUNTIME_DIR",
        "fields": [
          {
            "name": "sherpa_onnx_runtime_dir",
            "type": "string",
            "label": "SHERPA_ONNX_RUNTIME_DIR",
            "required": true,
            "sensitive": false
          }
        ]
      },
      {
        "step_id": "env_1",
        "step_type": "input",
        "title": "Configure SHERPA_ONNX_MODEL_DIR",
        "description": "Enter the value for SHERPA_ONNX_MODEL_DIR",
        "fields": [
          {
            "name": "sherpa_onnx_model_dir",
            "type": "string",
            "label": "SHERPA_ONNX_MODEL_DIR",
            "required": true,
            "sensitive": false
          }
        ]
      },
      {
        "step_id": "confirm",
        "step_type": "confirm",
        "title": "Confirm Configuration",
        "description": "Review and confirm your configuration"
      }
    ],
    "completion_method": "apply_config"
  }
}
