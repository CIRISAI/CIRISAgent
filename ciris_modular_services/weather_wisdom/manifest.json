{
  "module": {
    "name": "weather_wisdom",
    "version": "1.0.0",
    "description": "Weather wisdom provider using NOAA National Weather Service API",
    "author": "CIRIS Team",
    "safe_domain": true
  },
  "services": [{
    "type": "WISE_AUTHORITY",
    "priority": "NORMAL",
    "class": "weather_wisdom.service.WeatherWisdomAdapter",
    "capabilities": [
      "get_guidance",
      "fetch_guidance",
      "domain:weather",
      "domain:weather:forecast",
      "domain:weather:alerts",
      "modality:sensor:atmospheric"
    ]
  }],
  "capabilities": [
    "get_guidance",
    "fetch_guidance",
    "domain:weather",
    "domain:weather:forecast",
    "domain:weather:alerts",
    "modality:sensor:atmospheric"
  ],
  "dependencies": {
    "protocols": [
      "ciris_engine.protocols.services.WiseAuthorityService"
    ],
    "schemas": [
      "ciris_engine.schemas.services.authority_core"
    ],
    "external": {
      "aiohttp": ">=3.8.0"
    }
  },
  "exports": {
    "service_class": "weather_wisdom.service.WeatherWisdomAdapter",
    "capabilities": [
      "domain:weather",
      "domain:weather:forecast",
      "domain:weather:alerts",
      "modality:sensor:atmospheric"
    ]
  },
  "configuration": {
    "noaa_user_agent": {
      "type": "string",
      "env": "CIRIS_NOAA_USER_AGENT",
      "default": "CIRIS/1.0 (contact@ciris.ai)",
      "description": "User agent for NOAA Weather API (required)"
    },
    "openweathermap_api_key": {
      "type": "string",
      "env": "CIRIS_OPENWEATHERMAP_API_KEY",
      "default": null,
      "description": "Optional OpenWeatherMap API key for fallback"
    }
  },
  "metadata": {
    "primary_api": "NOAA National Weather Service",
    "fallback_api": "OpenWeatherMap",
    "requires_api_key": false,
    "safe_domain": "weather",
    "prohibited": ["medical", "health", "clinical"]
  }
}
